<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mp_tbmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/advertencia"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:titleTextAppearance="@style/ToolbarTitleStyle"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp"
        android:foregroundGravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:tooltipText="Registrar Avances">

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Obra activa:"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Seleccione la obra:"
                        android:textSize="14sp"/>

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:text="Avance: 0%"
                        android:textStyle="bold" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="280dp"
                        android:layout_height="20dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/log_mbtn"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:backgroundTint="#3F51B5"
                android:text="Registrar Avance"
                android:textColor="@color/fondo_principal"
                android:textColorLink="#673AB7"
                android:tooltipText="Control de avance de obra "
                app:cornerRadius="10dp"
                app:icon="@drawable/icon_avance"
                app:iconSize="50dp"
                app:strokeColor="#03A9F4"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/log_mbtn2"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:backgroundTint="#3F51B5"
                android:text="Reportar Incidente"
                android:textColor="@color/fondo_principal"
                android:textColorLink="#673AB7"
                android:tooltipText="Reporte de seguridad y riesgos"
                app:cornerRadius="10dp"
                app:icon="@drawable/icon_incidente"
                app:iconSize="50dp"
                app:strokeColor="#03A9F4"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/log_mbtn3"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:backgroundTint="#3F51B5"
                android:text="Ver Reportes"
                android:textColor="@color/fondo_principal"
                android:textColorLink="#673AB7"
                android:tooltipText="Reportes y visualizaciÃ³n"
                app:cornerRadius="10dp"
                app:icon="@drawable/icon_reporte"
                app:iconSize="50dp"
                app:strokeColor="#03A9F4"
                app:strokeWidth="2dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.seguridad.ReporteSeguridadActivity"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="150px">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Registro de Seguridad y Riesgos"
            android:textColor="#FF9800"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de Reporte"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_tipo_reporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción Detallada del Evento"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_text_descripcion"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_border"
            android:gravity="top"
            android:hint="Describa el incidente o la condición insegura..."
            android:inputType="textMultiLine"
            android:padding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nivel de Severidad/Riesgo"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radio_group_severidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_alta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FF9800"
                android:text="Alta" />

            <RadioButton
                android:id="@+id/radio_media"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:buttonTint="#FF9800"
                android:text="Media" />

            <RadioButton
                android:id="@+id/radio_baja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:buttonTint="#FF9800"
                android:text="Baja" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Evidencia Fotográfica"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_tomar_foto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#FF9800"
            android:text="Añadir Fotografía"
            android:textColor="#FFFFFF" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:id="@+id/layout_miniaturas_fotos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </HorizontalScrollView>

        <Button
            android:id="@+id/btn_guardar_reporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FF9800"
            android:text="Guardar Reporte"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_volver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#C3873A"
            android:text="Volver"
            android:textStyle="bold"
            app:icon="@android:drawable/ic_menu_revert"
            app:iconGravity="textEnd"
            app:iconTint="#FFFFFF" />

        <Button
            android:id="@+id/btn_probar_crud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Administrar Reportes"
            android:backgroundTint="#8B4513" android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView>